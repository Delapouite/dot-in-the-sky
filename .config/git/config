[user]
	email = delapouite@gmail.com
	name = Delapouite
	useConfigOnly = true

[includeIf "gitdir:~/code/github/"]
	path = ~/code/github/.gitconfig

[includeIf "gitdir:~/code/gitlab/"]
	path = ~/code/gitlab/.gitconfig

[core]
	editor = kak

[alias]
	# plurals
	aliases = !git config -l | grep alias | cut -c 7-
	branches = branch -a --sort=-committerdate --format='%(committerdate:short) %(color:green)%(refname:short)%(color:reset) - %(color:cyan)%(contents:subject)%(color:reset) - %(authorname)'
	hooks = !fd . .git/hooks --exclude '*.sample'
	remotes = remote -v
	stashes = stash list
	tags = tag -n

	# synonyms
	amend = commit --amend
	authors = shortlog -sne
	fix = rebase -i HEAD~2
	nuke = !git branch --merged | grep -v -P '^\\*|master|main|staging|develop' | xargs -n1 -r git branch -d
	uncommit = reset --mixed HEAD~
	unstage = restore --staged
	tidy = rebase -i @{upstream}..

	a = add
	b = branches
	ci = commit -v
	co = checkout
	d = diff
	dw = diff --word-diff
	dsf = "!git diff --color $@ | diff-so-fancy"
	l = log --graph --format='%C(yellow)%h% %C(red)%d%Creset %s %Cgreen(%cr) %C(blue)%an%Creset'
	ls = "!cd ${GIT_PREFIX:-`pwd`}; printf \"# HEAD: \"; git log --oneline | head -n1; git status"
	rb = rebase
	s = status --short --branch
	ui = !gitui

[push]
	default = simple

[pull]
	rebase = merges

[status]
	showUntrackedFiles = all

[diff]
	wordRegex = .

[color]
	ui = auto

[merge]
	tool = meld

[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"

[rerere]
	enabled = true
