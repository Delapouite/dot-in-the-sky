[user]
	email = delapouite@gmail.com
	name = Delapouite
	useConfigOnly = true

[core]
	editor = kak

[alias]
	# plurals
	aliases = !git config -l | grep alias | cut -c 7-
	branches = branch -a
	remotes = remote -v
	stashes = stash list
	tags = tag -n

	# synonyms
	amend = commit --amend
	authors = shortlog -sne
	fix = rebase -i HEAD~2
	nuke = !git branch --merged | grep -v -P '^\\*|master|staging|develop' | xargs -n1 -r git branch -d
	uncommit = reset --mixed HEAD~
	unstage = restore --staged
	tidy = rebase -i @{upstream}..

	a = add
	b = branch -avv
	ci = commit -v
	co = checkout
	d = diff
	dw = diff --word-diff
	dsf = "!git diff --color $@ | diff-so-fancy"
	l = log --graph --format='%C(yellow)%h% %C(red)%d%Creset %s %Cgreen(%cr) %C(blue)%an%Creset'
	ls = "!cd ${GIT_PREFIX:-`pwd`}; printf \"# HEAD: \"; git log --oneline | head -n1; git status"
	rb = rebase
	s = status --short --branch

[push]
	default = simple

[pull]
	rebase = merges

[status]
	showUntrackedFiles = all

[diff]
	wordRegex = .

[color]
	ui = auto

[merge]
	tool = meld

[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"

[rerere]
	enabled = true
