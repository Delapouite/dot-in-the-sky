[
  // sidebar
  {
    "key": "Ctrl+e",
    "title": "Focus explorer view",
    "command": "workbench.view.explorer"
  },
  {
    "key": "Ctrl+f",
    "title": "Find in files",
    "command": "workbench.action.findInFiles",
    "when": "editorTextFocus"
  },
  // layout
  {
    "key": "Ctrl+h",
    "title": "Navigate left",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "Ctrl+j",
    "title": "Navigate down",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "Ctrl+k",
    "title": "Navigate up",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "Ctrl+l",
    "title": "Navigate right",
    "command": "workbench.action.navigateRight"
  },
  // dance: move b to q
  {
    "key": "Q",
    "title": "Select to previous word start",
    "command": "dance.seek.word.backward",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "Shift+Q",
    "title": "Extend to previous word start",
    "command": "dance.seek.word.extend.backward",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "Alt+Q",
    "title": "Select to previous non-whitespace word start",
    "command": "dance.seek.word.ws.backward",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "Shift+Alt+Q",
    "title": "Extend to previous non-whitespace word start",
    "command": "dance.seek.word.ws.extend.backward",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "B",
    "title": "Show buffer menu",
    "command": "dance.openMenu",
    "when": "editorTextFocus && dance.mode == 'normal'",
    "args": {
      "input": "buffer"
    }
  },
  {
    "key": "Shift+B",
    "title": "Show buffer menu (locked)",
    "command": "dance.openMenu",
    "when": "editorTextFocus && dance.mode == 'normal'",
    "args": {
      "input": "buffer",
      "locked": true
    }
  },
  {
    "key": "Ctrl+I",
    "title": "Jump forward",
    "command": "workbench.action.navigateForward",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "Ctrl+O",
    "title": "Jump backward",
    "command": "workbench.action.navigateBack",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "Alt+Backspace",
    "title": "Clear main selections",
    "command": "dance.selections.clear.main",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "Backspace",
    "title": "Clear secondary selections",
    "command": "dance.selections.clear.secondary",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "Shift+3",
    "title": "Comment code",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "Alt+J",
    "title": "Search",
    "command": "dance.search",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  // text-objects
  {
    "key": "Alt+O",
    "title": "Select whole object",
    "command": "dance.seek.askObject",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  {
    "key": "Alt+O",
    "title": "Select whole object",
    "command": "dance.seek.askObject",
    "when": "editorTextFocus && dance.mode == 'insert'"
  },
  // Spacemacs
  {
    "key": "Space",
    "title": "Show commands",
    "command": "workbench.action.showCommands",
    "when": "editorTextFocus && dance.mode == 'normal'"
  },
  // previous / next
  {
    "key": "Ctrl+p",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "Ctrl+n",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "Ctrl+p",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  {
    "key": "Ctrl+n",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "tab",
    "command": "editor.toggleFold",
    "when": "editorTextFocus && foldingEnabled && dance.mode == 'normal'"
  },
]
